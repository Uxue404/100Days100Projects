<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.conversordivisas.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="textCantidad" promptText="Dame una cantidad">
      <font>
         <Font name="Cascadia Code PL Regular" size="22.0" />
      </font>
   </TextField>
   <ComboBox fx:id="comboBox" onAction="#onHelloButtonClick" prefHeight="25.0" prefWidth="215.0"  />
   <Label fx:id="labelDivisa" prefHeight="30.0" prefWidth="307.0">
      <font>
         <Font name="Cascadia Code PL Regular" size="25.0" />
      </font></Label>
   <Button fx:id="botonLimpiar" mnemonicParsing="false" onAction="#botonLimpiar" prefHeight="25.0" prefWidth="184.0" text="Limpiar">
      <font>
         <Font size="24.0" />
      </font></Button>

</VBox>
